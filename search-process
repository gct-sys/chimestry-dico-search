    <h2>Recherche dans le dictionnaire</h2>
    <form onsubmit="(function(f){
        var mot = f.query.value.trim();
        if(!mot) return false;
        var motEncode = encodeURIComponent(mot);
        var url = 'https://sites.google.com/view/dictionnaire-de-chimie/dictionnaire/' + motEncode + '?authuser=0';
        window.location.href = url;
        return false;
    })(this);">
        <input type="text" name="query" placeholder="Entrez un mot (ex : isom√®re)" required>
        <button type="submit">üîç Rechercher</button>
